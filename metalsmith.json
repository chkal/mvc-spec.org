{
  "source": "src",
  "destination": "build",
  "plugins": {
    "metalsmith-markdown": {},
    "metalsmith-asciidoc": {},
    "metalsmith-layouts": {
      "engine": "handlebars",
      "directory": "layouts",
      "default": "layout.html",
      "pattern": "*"
    },
    "metalsmith-less": {
      "pattern": "**/*.less"
    },
    "metalsmith-assets": {
      "source": "public",
      "destination": "."
    },
    "metalsmith-assets": {
      "source": "node_modules/bootstrap/dist",
      "destination": "vendor/bootstrap"
    }
  }
}
