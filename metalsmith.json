{
  "source": "src",
  "destination": "build",
  "plugins": {
    "metalsmith-markdown": {},
    "metalsmith-asciidoc": {},
    "metalsmith-layouts": {
      "engine": "handlebars",
      "directory": "layouts",
      "default": "layout.html",
      "pattern": "*"
    },
    "metalsmith-less": {
      "pattern": "**/*.less"
    },
    "metalsmith-static": [{
      "src": "public",
      "dest": "."
    },{
      "src": "node_modules/bootstrap/dist",
      "dest": "vendor/bootstrap"
    },{
      "src": "node_modules/jquery/dist",
      "dest": "vendor/jquery"
    }]
  }
}
